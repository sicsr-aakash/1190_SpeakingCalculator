<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Instruction" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.88" >
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/scrollView1"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Instructions"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text="1. Speaking Calculator is used for calculating arithmetic calculations,trignometric functions and temperature."
         
            android:textAppearance="?android:attr/textAppearanceSmall" />

         <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text="Pre­Requistive for using this application:"
         
            android:textAppearance="?android:attr/textAppearanceSmall" />
          <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text="1. Working internet connection either wifi or cellphone internet but it should speed not too high not too low."
            android:textAppearance="?android:attr/textAppearanceSmall" />
          <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text="2. Try to use this app in less noisy zone so that it can recognize your voice and input correctly."
            android:textAppearance="?android:attr/textAppearanceSmall" />
           <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text="3. When you open this app you will find one button press that button and start speaking. While speaking you need to keep in mind few important points:"
            android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" Use the following terms:"
            android:textAppearance="?android:attr/textAppearanceSmall" />
              <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° addition ­ plus"
            android:textAppearance="?android:attr/textAppearanceSmall" />
               <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° substraction ­ minus"
            android:textAppearance="?android:attr/textAppearanceSmall" />
              <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° multiplication ­ multiplied by"
            android:textAppearance="?android:attr/textAppearanceSmall" />
                <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° division ­ by"
            android:textAppearance="?android:attr/textAppearanceSmall" />
                   <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° square root ­ root of"
            android:textAppearance="?android:attr/textAppearanceSmall" />
                      <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° sine/sign ­ sin"
            android:textAppearance="?android:attr/textAppearanceSmall" />
                      <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° cos ­ cos"
            android:textAppearance="?android:attr/textAppearanceSmall" />   
             <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° tan ­ tan"
            android:textAppearance="?android:attr/textAppearanceSmall" />    
             <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° log ­ log"
            android:textAppearance="?android:attr/textAppearanceSmall" />   
              <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° mod ­ mod"
            android:textAppearance="?android:attr/textAppearanceSmall" /> 
             <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° cube ­ cube"
            android:textAppearance="?android:attr/textAppearanceSmall" /> 
             <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° percent ­ percent"
            android:textAppearance="?android:attr/textAppearanceSmall" /> 
              
               <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text=" ° To calculate temperature: Speak Celsius to Fahrenheit, it will take you to new page,"
            android:textAppearance="?android:attr/textAppearanceSmall" />   
                <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text="Speak the value to convert it."
            android:textAppearance="?android:attr/textAppearanceSmall" />   
              <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text="Similarly Calculates Celsius to Kelvin, Fahrenheit to Celsius, etc."
            android:textAppearance="?android:attr/textAppearanceSmall" />  
               <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text="° To calculate Unit: Speak Centimeter to meter, it will take you to new page,"
            android:textAppearance="?android:attr/textAppearanceSmall" />   
   			     <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#FFFFFF"
            android:text="Speak the value to convert it. Similarly Calculates Centimeter to kilometer, meter to kilometer, etc."
            android:textAppearance="?android:attr/textAppearanceSmall" /> 
            
               </LinearLayout>
 </ScrollView>
</LinearLayout>